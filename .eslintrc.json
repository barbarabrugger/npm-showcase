{
   "extends": "es/node",
   "rules": {
      "indent": [
         "error",
         2
      ],
      "linebreak-style": [
         "error",
         "unix"
      ],
      "quotes": [
         "error",
         "double"
      ],
      "semi": [
         "error",
         "always"
      ]
   },
   "ignorePatterns": [
      "node_modules/",
      "dist/",
      "tests/"
   ]
}